#!/usr/bin/env zsh

# XDG
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_STATE_HOME="$HOME/.local/state"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_BIN_HOME="$HOME/.local/bin"

# Dotfiles and workspace organization
export DOTFILES="$HOME/.dotfiles"
export WORKSPACE="$HOME/workspace"

# Zsh
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"

# Ensure directories exist
for dir in "$XDG_CONFIG_HOME" "$XDG_DATA_HOME" "$XDG_STATE_HOME" "$XDG_CACHE_HOME" "$XDG_BIN_HOME" "$ZDOTDIR" "$WORKSPACE"; do
    [ ! -d "$dir" ] && mkdir -p "$dir"
done

# Load additional config if exists
[ -f "$DOTFILES/install_config" ] && source "$DOTFILES/install_config"
